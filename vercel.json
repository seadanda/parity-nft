{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "src/app/api/mint/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/cron/cleanup",
      "schedule": "0 * * * *"
    }
  ],
  "regions": ["iad1"],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
