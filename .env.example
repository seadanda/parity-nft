# Parity 10 Years NFT - Environment Variables
# Copy this file to .env.local for local development

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# RPC Endpoint
# Local: ws://localhost:8000
# Testnet: wss://westend-asset-hub-rpc.polkadot.io
# Production: wss://polkadot-asset-hub-rpc.polkadot.io
RPC_ENDPOINT="wss://polkadot-asset-hub-rpc.polkadot.io"

# NFT Collection ID on Asset Hub
COLLECTION_ID=669

# Proxy account seed phrase (Charlie - used by backend)
PROXY_SEED="your_proxy_seed_phrase_here"

# Collection owner address (Bob - kept offline)
COLLECTION_OWNER_ADDRESS="5GrwvaEF5zXb26Fz9rcQpDWS57CtERHpNehXCPcNoHGKutQY"

# ============================================
# DATABASE (Turso)
# ============================================

# Production: Turso (get from: turso db show parity-nft-prod)
TURSO_DATABASE_URL="libsql://your-db.turso.io"
TURSO_AUTH_TOKEN="your_turso_auth_token_here"

# Local development: Leave empty to use local SQLite
# DATABASE_URL=""

# ============================================
# EMAIL SERVICE
# ============================================

# Resend API Key (production)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# From email address (must be verified domain in Resend)
FROM_EMAIL="nft@parity.io"

# Force Resend in development (default: false, uses Ethereal)
USE_RESEND="false"

# ============================================
# IPFS / PINATA
# ============================================

# Pinata JWT for IPFS pinning
# Get from: https://app.pinata.cloud/developers/api-keys
PINATA_JWT="your_pinata_jwt_token_here"

# Optional: Pinata Group ID for organization
PINATA_GROUP_ID="your_group_id"

# ============================================
# APPLICATION
# ============================================

# App URL for email links
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
APP_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# JWT Secret for session tokens (auto-generated if not set)
JWT_SECRET="your_random_secret_here_at_least_32_characters_long"
