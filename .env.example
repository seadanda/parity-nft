# Parity 10 Years NFT - Environment Variables
# Copy this file to .env.local for local development

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# RPC Endpoint (server-side)
# Local: ws://localhost:8000
# Testnet: wss://westend-asset-hub-rpc.polkadot.io
# Production: wss://polkadot-asset-hub-rpc.polkadot.io
RPC_ENDPOINT="wss://polkadot-asset-hub-rpc.polkadot.io"

# RPC Endpoint (client-side fallback)
NEXT_PUBLIC_RPC_ENDPOINT="wss://polkadot-asset-hub-rpc.polkadot.io"

# NFT Collection ID on Asset Hub
COLLECTION_ID=674

# Proxy account seed phrase
# This account acts as AssetManager and AssetOwner proxy for the collection
# Fund this account with enough DOT to cover all NFT deposits:
#   - Item deposit: ~0.01 DOT per NFT
#   - Metadata deposit: ~0.01 DOT per NFT
#   - Attribute deposits: ~0.03 DOT per NFT (3 attributes)
#   - Total: ~0.05-0.1 DOT per NFT
# Locally minting all on the whitelist (~200) leads to just under 6 dot in reservations
PROXY_SEED="your_proxy_seed_phrase_here"

# Collection owner address (pure proxy or your main account)
# This is the address that owns the collection
# The PROXY_SEED account must be added as AssetManager + AssetOwner proxy
COLLECTION_OWNER_ADDRESS="15aKoPhqEhe8zVQiPMK7HxCmsJDXiueYFzg4KN6MbwhYMCXk"

# ============================================
# DATABASE (Turso)
# ============================================

# Production: Turso (get from: turso db show parity-nft-prod)
TURSO_DATABASE_URL="libsql://your-db.turso.io"
TURSO_AUTH_TOKEN="your_turso_auth_token_here"

# Local development: Leave empty to use local SQLite (file:./data/whitelist.sqlite)
# DATABASE_URL is used as a fallback if TURSO_DATABASE_URL is not set
# DATABASE_URL=""

# ============================================
# EMAIL SERVICE (ProtonMail SMTP)
# ============================================

# Email service mode:
#   "true"  = Use ProtonMail SMTP for real emails (requires ProtonMail config below)
#   "false" = Use Ethereal/console for testing (no real emails sent)
USE_PROTON_SMTP="true"

# ProtonMail SMTP Configuration (REQUIRED if USE_PROTON_SMTP="true")
# Generate SMTP token: https://account.proton.me/u/0/mail/smtp
# Requires paid ProtonMail plan with custom domain
PROTON_SMTP_HOST="smtp.protonmail.ch"
PROTON_SMTP_PORT="587"
PROTON_SMTP_USER="sending-email@domain.dev"
PROTON_SMTP_TOKEN="your-smtp-token"
FROM_EMAIL="sending-email@domain.dev"

# Local: http://localhost:3000
# Production: https://parity-nft.seadanda.dev
APP_URL="http://localhost:3000"

# ============================================
# IPFS / PINATA
# ============================================

# Pinata JWT for IPFS pinning
# Get from: https://app.pinata.cloud/developers/api-keys
PINATA_JWT="your_pinata_jwt_token_here"

# Optional: Pinata Group ID for organization
PINATA_GROUP_ID="your_group_id"

# ============================================
# APPLICATION
# ============================================

# Environment
NODE_ENV="development"
